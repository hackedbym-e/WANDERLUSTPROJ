<% layout("/layouts/boilerplate") %>
<h2 class="col-8 offset-2">Sign-up for Wanderlust</h2>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <form method="POST" action="/signup" novalidate class="needs-validation" novalidate>
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input 
              name="username"
               placeholder="username" 
               type="text" 
               class="form-control"
               required
               />
               <div class="valid-feedback">looks good</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input 
                name="email"
                 placeholder="email" 
                 type="text" 
                 class="form-control"
                 required
                 />
                 <div class="valid-feedback">looks good</div>
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input 
                name="password"
                 placeholder="Password" 
                 type="text" 
                 class="form-control"
                 required
                 />
                 <div class="valid-feedback">looks good</div>
              </div>
              <button class="btn btn-success">Sign-up</button>
        </form>
    </div>
</div>